<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Caldeir√£o de Artes da V√≥ Bruxa">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));

        window.addEventListener("phx:set-theme", (e) => setTheme(e.detail.dispatcher.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <div class="drawer lg:drawer-open">
      <input id="sidebar-drawer" type="checkbox" class="drawer-toggle" />

      <div class="drawer-content flex flex-col min-h-screen">
        <div class="navbar bg-base-100 border-b border-base-300 px-4 sm:px-6 lg:px-8">
          <div class="flex-none lg:hidden">
            <label for="sidebar-drawer" class="btn btn-ghost btn-square">
              <.icon name="hero-bars-3" class="size-5" />
            </label>
          </div>
          <div class="flex-1" />
          <ul class="menu menu-horizontal flex items-center gap-2">
            <%= if @current_scope do %>
              <li>
                <span class="text-sm opacity-60">{@current_scope.user.email}</span>
              </li>
              <li>
                <.theme_toggle />
              </li>
              <li>
                <.link href={~p"/users/settings"} class="text-sm font-medium">Configura√ß√µes</.link>
              </li>
              <li>
                <.link href={~p"/users/log-out"} method="delete" class="text-sm font-medium">Sair</.link>
              </li>
            <% else %>
              <li>
                <.theme_toggle />
              </li>
              <li>
                <.link href={~p"/users/register"} class="text-sm font-medium">Cadastrar</.link>
              </li>
              <li>
                <.link href={~p"/users/log-in"} class="btn btn-primary btn-sm rounded-xl">Entrar</.link>
              </li>
            <% end %>
          </ul>
        </div>

        {@inner_content}
      </div>

      <div class="drawer-side z-40">
        <label for="sidebar-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <aside class="bg-base-200 min-h-full w-64 flex flex-col border-r border-base-300">
          <div class="px-5 py-6 border-b border-base-300">
            <a href="/" class="flex items-center gap-2">
              <span class="text-2xl">ü™Ñ</span>
              <div>
                <p class="font-bold text-sm text-base-content leading-tight">Caldeir√£o de Artes</p>
                <p class="text-xs text-base-content/60">da V√≥ Bruxa</p>
              </div>
            </a>
          </div>
          <ul class="menu menu-lg flex-1 px-3 pt-3">
            <li>
              <.link href={~p"/"}>
                <.icon name="hero-home" class="size-5" />
                In√≠cio
              </.link>
            </li>
            <li>
              <.link href={~p"/artworks"}>
                <.icon name="hero-photo" class="size-5" />
                Galeria
              </.link>
            </li>
            <%= if @current_scope do %>
              <li>
                <.link href={~p"/opinions"}>
                  <.icon name="hero-chat-bubble-left-right" class="size-5" />
                  Opini√µes
                </.link>
              </li>
            <% end %>
            <%= if @current_scope && @current_scope.user.role == :admin do %>
              <li class="menu-title text-xs opacity-50 mt-2">Admin</li>
              <li>
                <.link href={~p"/admin/opinions"}>
                  <.icon name="hero-clipboard-document-list" class="size-5" />
                  Todas as Opini√µes
                </.link>
              </li>
            <% end %>
          </ul>
          <%= if @current_scope do %>
            <div class="p-3 border-t border-base-300">
              <.link href={~p"/users/settings"} class="btn btn-ghost btn-square" title="Configura√ß√µes">
                <.icon name="hero-cog-6-tooth" class="size-5" />
              </.link>
            </div>
          <% end %>
        </aside>
      </div>
    </div>
  </body>
</html>
